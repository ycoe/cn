<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
       default-lazy-init="false">

    <description>Spring-MongoDB配置</description>

    <bean id="mongoConf" class="com.duoec.commons.mongo.core.MongoConf">
        <property name="connectionsPerHost" value="${mongodb.connectionsPerHost}" />
        <property name="maxWaitTime" value="${mongodb.maxWaitTime}" />
        <property name="mongoDBConnections" value="${mongodb.connections}" />
    </bean>

    <bean class="com.duoec.commons.mongo.core.YMongoClient">
        <property name="mongoConf" ref="mongoConf" />
    </bean>
</beans>
